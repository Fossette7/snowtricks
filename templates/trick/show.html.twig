{% extends 'base.html.twig' %}

{% block title %}Trick{% endblock %}

{% block body %}
    <h1>Trick</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trick.id }}</td>
            </tr>
            <tr>
                <th>TrickName</th>
                <td>{{ trick.TrickName }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ trick.photo }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ trick.category }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ trick.author }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ trick.createdAt ? trick.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IdComments</th>
                <td>{{ trick.idComments }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ trick.content }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('trick_index') }}">back to list</a>

    <a href="{{ path('trick_edit', {'id': trick.id}) }}">edit</a>

    {{ include('trick/_delete_form.html.twig') }}
{% endblock %}

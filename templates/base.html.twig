<!DOCTYPE html>
<html lang="en">
<head>
    <title>{% block title %}Fun Tricks{% endblock %}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="stylesheet" href="assets/css/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/style.css">
    <link rel="icon" href="favicon.ico">
</head>
<body>
<div class="container-fluid">
    {% block header %}
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand d-lg-none" href="{{ path('home') }}">SnowTricks</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigations-02"><span
                        class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse justify-content-md-center" id="navigations-02">
                <div class="row w-100">
                    <div class="col-6 pl-lg-0">
                        <ul class="navbar-nav">
                            <li class="nav-item"><a class="nav-link active" href="{{ path('home') }}">Snowtricks<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('trick_index') }}">Les Tricks</a></li>
                        </ul>
                    </div>

                    <div class="col-6 pr-lg-0">
                        <ul class="navbar-nav justify-content-end">
                            <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}">Register</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Login</a></li>
                            <li class="nav-item">
                                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                    <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                                {% endif %}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    {% endblock %}
    {% block body %}{% endblock %}
    {% block footer %}
        <footer class="py-3">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center flex-column flex-md-row border-bottom pb-2">
                    <h5 class="ml-0 ml-md-3 mb-0"><a href="#">Instagram</a></h5>
                    <ul class="nav justify-content-center">
                        <li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('trick_index') }}">Tricks</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Contact</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Register</a></li>
                    </ul>
                </div>
                <div class="d-flex justify-content-center align-items-center justify-content-md-between flex-column flex-md-row mx-3 mt-3">
                    <div class="d-flex"><a href="#"><img class="mr-3" src="placeholder/icons/twitter.svg" alt=""></a><a
                                href="#"><img class="mr-3" src="placeholder/icons/facebook-f.svg" alt=""></a><a
                                href="#"><img src="placeholder/icons/instagram.svg" alt=""></a></div>
                    <div class="d-flex mt-3 mt-md-0">
                        <p class="mb-0 small text-muted">&copy; 2020 Snowtricks project. All right reserved.</p>
                    </div>
                </div>
            </div>
        </footer>
    {% endblock %}
</div>
<script src="assets/js/jquery/jquery.min.js"></script>
<script src="assets/js/popper/popper.min.js"></script>
<script src="assets/js/bootstrap/bootstrap.min.js"></script>
</body>
</html>

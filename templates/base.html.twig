<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Fun tricks!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
        {% endblock %}

        <!-- Navigation -->
        <nav>
            {% block navBar %}
            <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
                <div class="container">
                    <a class="navbar-brand" {#href="{{ path(#) }}"#} >Snowtricks</a>
                    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                            data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <!-- Menu -->
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarResponsive">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" {#href="{{ path(#) }}"#}>Home</a>
                            </li>
                            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                <li class="nav-item">
                                    <!-- Admin panel -->
                                    <a class="nav-link" {#href="{{ path(#) }}"#}>Gestionnaire</a>
                                </li>
                            {% else %}
                                <input type="hidden" value="Gestionnaire">
                            {% endif %}
                            <li class="nav-item">
                                <a class="nav-link" {#href="{{ path('about_index') }}"#}>Contact</a>
                            </li>
                            <li class="nav-item">
                                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                    <a class="link" {#href="{{ path(#) }}"#}>Se d√©connecter</a>
                                {% endif %}
                            </li>
                        </ul>
                    </div>

                </div>
            </nav>
        {% endblock %}
        </nav>
    </head>
    <body>
        {% block body %}
            <h1>HELLO WORLD!</h1>
            <h2>Test:Your lucky number is {{ number }}</h2>
            <p>bonjour</p>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
